while True:
    try:
        age = int(input("Please enter your age (or enter -1 to exit): "))

        if age == -1:
            print("Exiting the program. Goodbye!")
            break

        if age < 3:
            ticket_price = 0
        elif 3 <= age <= 12:
            ticket_price = 10
        else:
            ticket_price = 15

        print(f"The cost of your movie ticket is ${ticket_price}\n")

    except ValueError:
        print("Invalid input. Please enter a valid age as a number.\n")
   
